<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <solid
                android:color="@android:color/white" />
            <stroke
                android:width="@dimen/stroke_size"
                android:color="@color/accent_red" />
        </shape>
    </item>

    <item
        android:drawable="@mipmap/ic_check"
        android:left="@dimen/horizontal_margin_small"
        android:right="@dimen/horizontal_margin_small"
        android:top="@dimen/vertical_margin_small"
        android:bottom="@dimen/vertical_margin_small" />
</layer-list>