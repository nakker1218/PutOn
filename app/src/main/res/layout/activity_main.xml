<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        class="android.support.v7.widget.Toolbar"
        android:id="@+id/main_Toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/abc_action_bar_default_height_material"
        android:minHeight="@dimen/abc_action_bar_default_height_material"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:background="?attr/colorPrimary" >
    </android.support.v7.widget.Toolbar>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/memo_ListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fadingEdge="none"
            android:dividerHeight="@dimen/divider_size" />

        <TextView
            android:id="@+id/listEmpty_TextView"
            android:text="@string/text_listView_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/secondary_text"
            android:textSize="@dimen/text_size_xxlarge"
            android:layout_gravity="center" />

        <view
            class="com.melnykov.fab.FloatingActionButton"
            android:id="@+id/create_FAB"
            android:layout_width="@dimen/fab_size_normal"
            android:layout_height="@dimen/fab_size_normal"
            android:layout_gravity="bottom|right"
            android:layout_margin="@dimen/element_spacing_xlarge"
            android:src="@mipmap/ic_add"
            android:onClick="createMemo"
            fab:fab_colorNormal="@color/primary"
            fab:fab_colorPressed="@color/primary_dark" />
    </FrameLayout>
</LinearLayout>
